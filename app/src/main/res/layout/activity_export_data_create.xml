<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExportDataActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:id="@+id/exportSettings">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/section_padding"
            android:paddingEnd="@dimen/section_padding"
            android:orientation="vertical">

            <TextView
                android:text="URL"
                android:id="@+id/exportUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InputLabel"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editUrl"
                android:inputType="textUri"
                style="@style/InputField" />

            <TextView
                android:text="Set the URL the data will be sent to. Method will be POST and content type JSON"
                android:id="@+id/exportUrlHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InputHelp"/>

            <TextView
                android:text="Frequency"
                android:id="@+id/exportFrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InputLabel"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editFrequency"
                android:inputType="number"
                style="@style/InputField" />

            <TextView
                android:text="Specify interval in milliseconds for automatic export. 0 means automatic export is disabled."
                android:id="@+id/exportFrequencyHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InputHelp"/>


            <!-- CLIENT CERTIFICATE -->

            <TextView
                android:text="Client certificate"
                android:id="@+id/certificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InputLabel"/>

            <Button
                android:visibility="gone"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add certificate"
                android:id="@+id/certificateAdd" />

            <EditText
                android:visibility="gone"
                android:text="CERTIFICATE ADDED"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editCertificate"
                android:inputType="text"
                android:enabled="false"
                style="@style/InputField" />

            <Button
                android:visibility="gone"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove certificate"
                android:id="@+id/certificateRemove"
                android:layout_gravity="right" />

            <TextView
                android:text="Add client certificate if it is necessary for request authentication"
                android:id="@+id/certificateHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/InputHelp"/>


        </LinearLayout>

    </ScrollView>



</RelativeLayout>
