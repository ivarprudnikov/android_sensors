<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/material_deep_teal_200</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/material_deep_teal_500</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent_material_light</item>
    </style>

    <style name="Header">
        <item name="android:background">@color/material_deep_teal_500</item>
    </style>

    <style name="HeaderHero">
        <item name="android:paddingTop">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:paddingRight">@dimen/section_padding</item>
        <item name="android:paddingLeft">@dimen/section_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/abc_text_size_display_2_material</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="HeaderHeroSub">
        <item name="android:paddingBottom">@dimen/section_padding</item>
        <item name="android:paddingRight">@dimen/section_padding</item>
        <item name="android:paddingLeft">@dimen/section_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/abc_text_size_body_1_material</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DescriptionTitleText">
        <item name="android:textSize">@dimen/content_label</item>
        <item name="android:textColor">@color/content_textcolor</item>
        <item name="android:paddingLeft">@dimen/section_padding</item>
        <item name="android:paddingRight">@dimen/section_padding</item>
        <item name="android:paddingBottom">@dimen/section_padding_half</item>
    </style>

    <style name="DescriptionValueText">
        <item name="android:textSize">@dimen/content_text</item>
        <item name="android:textColor">@color/content_textcolor</item>
        <item name="android:paddingLeft">@dimen/section_padding</item>
        <item name="android:paddingRight">@dimen/section_padding</item>
        <item name="android:paddingBottom">@dimen/section_padding</item>
    </style>

    <style name="LogText">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">@dimen/content_log</item>
        <item name="android:textColor">@color/content_textcolor</item>
        <item name="android:paddingTop">@dimen/section_padding</item>
        <item name="android:paddingLeft">@dimen/section_padding</item>
        <item name="android:paddingRight">@dimen/section_padding</item>
        <item name="android:paddingBottom">@dimen/section_padding</item>
    </style>

    <style name="SwitchDark" parent="Base.TextAppearance.AppCompat.Widget.Switch">
        <item name="android:padding">@dimen/section_padding</item>
        <item name="android:background">@color/material_deep_teal_200</item>
        <item name="android:textColor">@color/bright_foreground_material_dark</item>
    </style>

</resources>
