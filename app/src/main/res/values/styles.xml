<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="IntroText">
        <item name="android:textSize">@dimen/content_text</item>
        <item name="android:textColor">@color/content_textcolor</item>
        <item name="android:paddingLeft">@dimen/section_padding</item>
        <item name="android:paddingRight">@dimen/section_padding</item>
        <item name="android:paddingBottom">@dimen/section_padding</item>
    </style>

    <style name="DescriptionTitleText">
        <item name="android:textSize">@dimen/content_label</item>
        <item name="android:textColor">@color/content_textcolor</item>
        <item name="android:paddingLeft">@dimen/section_padding</item>
        <item name="android:paddingRight">@dimen/section_padding</item>
        <item name="android:paddingBottom">@dimen/section_padding_half</item>
    </style>

    <style name="DescriptionValueText">
        <item name="android:textSize">@dimen/content_text</item>
        <item name="android:textColor">@color/content_textcolor</item>
        <item name="android:paddingLeft">@dimen/section_padding</item>
        <item name="android:paddingRight">@dimen/section_padding</item>
        <item name="android:paddingBottom">@dimen/section_padding</item>
    </style>

    <style name="LogText">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">@dimen/content_log</item>
        <item name="android:textColor">@color/content_textcolor</item>
        <item name="android:paddingLeft">@dimen/section_padding</item>
        <item name="android:paddingRight">@dimen/section_padding</item>
        <item name="android:paddingBottom">@dimen/section_padding</item>
    </style>

</resources>
